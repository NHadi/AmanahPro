{
  "name": "amanahpro-project",
  "version": "1.0.0",
  "description": "An Electron app for Project Recap",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "devDependencies": {
    "electron": "^25.0.0",
    "electron-builder": "^24.0.0"
  },
  "build": {
    "appId": "AmanahPro",
    "productName": "AmanahPro ",
    "files": [
      "main.js",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg" 
    },
    "linux": {
      "target": "AppImage" 
    }
  }
}
